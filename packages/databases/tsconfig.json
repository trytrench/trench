{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "lib": ["es2022"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": "./src",
    "preserveWatchOutput": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
